{
  "api_documentation": {
    "title": "User CRUD API",
    "version": "1.0.0",
    "base_url": "http://localhost/api",
    "endpoints": [
      {
        "method": "GET",
        "path": "/users",
        "description": "Get all users",
        "response": {
          "status": 200,
          "data": [
            {
              "id": 1,
              "name": "John Doe",
              "email": "john@example.com",
              "created_at": "2026-02-11T13:58:00.000000Z",
              "updated_at": "2026-02-11T13:58:00.000000Z"
            },
            {
              "id": 2,
              "name": "Jane Smith",
              "email": "jane@example.com",
              "created_at": "2026-02-11T14:00:00.000000Z",
              "updated_at": "2026-02-11T14:00:00.000000Z"
            }
          ]
        }
      },
      {
        "method": "POST",
        "path": "/users",
        "description": "Create a new user",
        "request": {
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "name": "John Doe",
            "email": "john@example.com",
            "password": "password123"
          }
        },
        "response": {
          "status": 201,
          "data": {
            "message": "User created successfully",
            "user": {
              "id": 1,
              "name": "John Doe",
              "email": "john@example.com",
              "created_at": "2026-02-11T13:58:00.000000Z",
              "updated_at": "2026-02-11T13:58:00.000000Z"
            }
          }
        }
      },
      {
        "method": "GET",
        "path": "/users/{id}",
        "description": "Get a specific user",
        "example_path": "/users/1",
        "response": {
          "status": 200,
          "data": {
            "id": 1,
            "name": "John Doe",
            "email": "john@example.com",
            "created_at": "2026-02-11T13:58:00.000000Z",
            "updated_at": "2026-02-11T13:58:00.000000Z"
          }
        }
      },
      {
        "method": "PUT",
        "path": "/users/{id}",
        "description": "Update a user",
        "example_path": "/users/1",
        "request": {
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {
            "name": "Jane Doe",
            "email": "jane.doe@example.com",
            "password": "newpassword123"
          }
        },
        "response": {
          "status": 200,
          "data": {
            "message": "User updated successfully",
            "user": {
              "id": 1,
              "name": "Jane Doe",
              "email": "jane.doe@example.com",
              "created_at": "2026-02-11T13:58:00.000000Z",
              "updated_at": "2026-02-11T14:05:00.000000Z"
            }
          }
        }
      },
      {
        "method": "DELETE",
        "path": "/users/{id}",
        "description": "Delete a user",
        "example_path": "/users/1",
        "response": {
          "status": 200,
          "data": {
            "message": "User deleted successfully",
            "user": {
              "id": 1,
              "name": "John Doe",
              "email": "john@example.com",
              "created_at": "2026-02-11T13:58:00.000000Z",
              "updated_at": "2026-02-11T13:58:00.000000Z"
            }
          }
        }
      }
    ],
    "error_responses": [
      {
        "status": 422,
        "description": "Validation error",
        "response": {
          "message": "Validation failed",
          "errors": {
            "email": ["The email field must be a valid email address."],
            "password": ["The password must be at least 8 characters."]
          }
        }
      },
      {
        "status": 404,
        "description": "User not found",
        "response": {
          "message": "Not Found"
        }
      },
      {
        "status": 500,
        "description": "Server error",
        "response": {
          "message": "Error creating user",
          "error": "Error message details"
        }
      }
    ],
    "validation_rules": {
      "create": {
        "name": "required|string|max:255",
        "email": "required|string|email|max:255|unique:users",
        "password": "required|string|min:8"
      },
      "update": {
        "name": "sometimes|required|string|max:255",
        "email": "sometimes|required|string|email|max:255|unique:users,email",
        "password": "sometimes|required|string|min:8"
      }
    }
  }
}
